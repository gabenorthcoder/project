{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/healthcheck": {
    "description": "Serves API health status as OK",
    "queries": [],
    "exampleResponse": {
      "healthcheck": "OK"
    }
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles in descending order",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 1,
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/../../.jpeg?w=700&h=700",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of article",
    "queries": ["article_id"],
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 1,
        "topic": "cooking",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/../../.jpeg?w=700&h=700"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments with the most recent comments first",
    "queries": ["article_id"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 0,
          "created_at": "2018-05-30T15:59:13.341Z",
          "author": "JohnDoe",
          "body": "Seafood substitutions are increasing",
          "article_id": 1,
          "topic": "cooking"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "serves an object of comment ",
    "queries": ["article_id"],
    "exampleResponse": {
      "comment": {
        "comment_id": 1,
        "body": "Seafood substitutions are increasing",
        "article_id": 1,
        "author": "JohnDoe",
        "votes": 0,
        "created_at": "2018-05-30T15:59:13.341Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "serves an object of updated article",
    "queries": ["article_id"],
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 1,
        "topic": "cooking",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/../../.jpeg?w=700&h=700"
      }
    }
  }
}
